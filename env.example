# Earnings Call Analyzer - Environment Configuration

# Ollama LLM Settings
OLLAMA_HOST=http://localhost:11434
SENTIMENT_MODEL=llama3.1:8b
CONTEXTUALIZATION_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=120

# Hybrid Sentiment Weighting (should sum to 1.0)
HYBRID_SENTIMENT_WEIGHT_LEXICON=0.3
HYBRID_SENTIMENT_WEIGHT_LLM=0.7

# LLM Generation Settings
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=500
LLM_CHUNK_SIZE=512
LLM_CHUNK_OVERLAP=128

# Transcript Validation
MIN_TRANSCRIPT_LENGTH=100
MAX_TRANSCRIPT_LENGTH=50000

# Alert Thresholds
COMPLEXITY_ALERT_THRESHOLD=70
DECEPTION_RISK_CRITICAL=70
DECEPTION_RISK_WARNING=50
EVASIVENESS_ALERT=15.0
QUESTION_AVOIDANCE_ALERT=40.0

# Historical Analysis
REPORT_HISTORICAL_QUARTERS=4

# Performance
MAX_CONCURRENT_ANALYSES=5
CACHE_RESULTS=true
